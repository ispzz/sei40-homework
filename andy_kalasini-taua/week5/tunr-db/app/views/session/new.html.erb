<h1>Login</h1>

<% if flash[:error] %>
  <%# Print out an error message, if the SessionController set one %>
  <br>
  <strong>
    <%= flash[:error] %>
  </strong>
  <br>
  <br>
<%  end %>

<%= form_with url: login_path, local: true do |f| %>

    <%= f.label :email %><br>
    <%= f.text_field :email %><br>
    <br>

    <%= f.label :password %><br>
    <%= f.password_field :password %><br>
    <br>

    <%= f.submit 'Sign Up' %>

    <% end %>
